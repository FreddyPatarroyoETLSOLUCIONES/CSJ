      <frame id="page" x1="34.0" y1="28.0" width="530" height="786"/>
    </pageTemplate>
</template>

  <stylesheet>
    <blockTableStyle id="blocktablestyle1">
      <blockValign value="CENTER" start="0,0" stop="-1,0"/>
    </blockTableStyle>
  </stylesheet>

 <story>
    <image file="{{logo}}"/>

    <para><font color="#004884"><b>Criterios de b√∫squeda</b></font>{{item.id}}</para>
